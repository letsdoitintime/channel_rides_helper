# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here

# Channel and Group IDs (use negative IDs for channels/groups)
RIDES_CHANNEL_ID=-1001234567890
DISCUSSION_GROUP_ID=-1001234567890

# Registration Mode: edit_channel | discussion_thread | channel_reply_post
REGISTRATION_MODE=edit_channel

# Ride Filter: hashtag | all
RIDE_FILTER=hashtag

# Hashtags to detect (comma-separated, only used when RIDE_FILTER=hashtag)
RIDE_HASHTAGS=#ride,#велопокатушка

# Admin User IDs (comma-separated)
ADMIN_USER_IDS=123456789,987654321

# Database Configuration
DATABASE_PATH=./data/bot.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/bot.log

# Optional: Timezone for timestamps
TIMEZONE=UTC

# Optional: Rate limiting (seconds between votes per user)
VOTE_COOLDOWN=1

# Optional: Show changed mind statistics
SHOW_CHANGED_MIND_STATS=true
